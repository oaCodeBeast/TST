@model IEnumerable<TST.DAL.TSTEmployeeStatus>

@{
    ViewBag.Title = "All User Statuses";
}

<h2 class="text-center" style="padding-bottom:10px;">@ViewBag.Title</h2>

<p class="text-center">
    @Html.ActionLink("Add a New Status", "Create", null, new { @class = "btn btn-primary" })
</p>

<div class="container">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="side-tb-entry">
                <div class="side-tb-header">
                    <h4>@Html.DisplayFor(modelItem => item.EmpStatusName)</h4>

                </div>
                <div class="side-tb-body">

                    @Html.DisplayFor(modelItem => item.EmpStatusDescription)
                </div>
                <div class="side-tb-footer">
                    @Html.ActionLink("Edit", "Edit", new { id = item.EmpStatusID }, new { @class = "btn btn-primary" })
                </div>
            </div>


        </div>


    }


    </div>
