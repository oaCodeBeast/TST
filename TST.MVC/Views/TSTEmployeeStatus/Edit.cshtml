@model TST.DAL.TSTEmployeeStatus

@{
    ViewBag.Title = "Edit the" + Model.EmpStatusName + " status?";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.EmpStatusID)

    <div class="col-md-6 side-tb-wrapper col-md-offset-3">
        <div class="side-tb-entry">
            <div class="side-tb-header">
                <h2>@ViewBag.Title</h2>

            </div>
            <div class="side-tb-body-form">
                <div class="form-group side-tb-input">
                    @Html.LabelFor(model => model.EmpStatusName, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.EmpStatusName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EmpStatusName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group side-tb-input">
                    @Html.LabelFor(model => model.EmpStatusDescription, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(model => model.EmpStatusDescription, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.EmpStatusDescription, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="side-tb-footer">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>


    </div>
}
<div class="clearfix"></div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
