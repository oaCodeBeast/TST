        $(document).ready(function () {
            var $box = $("#ticketImage")
            var $previewPic = $("#ticketImage > div > i").click(function () {
                $box.css('background-image', "none");
            })

            //$box.css('background-image', 'url(../../Content/TSTUserImages/' + $previewPic + ')');
