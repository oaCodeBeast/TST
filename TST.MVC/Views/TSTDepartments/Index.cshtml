@model IEnumerable<TST.DAL.TSTDepartment>

@{
    ViewBag.Title = "All Departments";
}

<h2 class="text-center" style="padding-bottom:10px;">@ViewBag.Title</h2>

<p class="text-center">
    @Html.ActionLink("Add a New Department", "Create", null, new { @class = "btn btn-primary" })
</p>
<div class="container">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="side-tb-entry">
                <div class="side-tb-header">
                    <h4>@Html.DisplayFor(modelItem => item.DepartmentName)</h4>
                    @if (item.IsActive == true)
                    {
                        <div class="on"></div>
                    }
                    else
                    {
                        <div class="off"></div>
                    }

                </div>
                <div class="side-tb-body">
                    @Html.DisplayFor(modelItem => item.DepartmentDescription)
                </div>
                <div class="side-tb-footer">
                    @Html.ActionLink("Edit", "Edit", new { id = item.DepartmentID }, new { @class = "btn btn-primary" })
                   @if (item.IsActive == true)
                   {
                    @Html.ActionLink("De-Activate", "Delete", new { id = item.DepartmentID }, new { @class = "btn btn-danger" })
                   }
                   else
                   {
                    @Html.ActionLink("Re-Activate", "Delete", new { id = item.DepartmentID }, new { @class = "btn btn-success" })
                   }
                </div>
            </div>


        </div>









    }

</div>

